<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Set character encoding and responsive design settings -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Mentor - VistaeGuide</title>

  <!-- Link to custom admin styles -->
  <link rel="stylesheet" href="/admin.css">

  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Bootstrap 5 for layout and UI components -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="admin-body">

  <!-- Sidebar: navigation for admin dashboard -->
  <div class="admin-sidebar">

    <!-- Logo redirecting to homepage -->
    <div class="admin-logo">
      <a href="http://localhost:8080/" class="logo" style="text-decoration: none;">
        <img src="/creative.png" alt="" style="height: 60px; width: 60px;">
      </a>
    </div>

    <!-- Navigation links for different admin sections -->
    <nav class="admin-nav">
      <ul>
        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href="/admin/questions"><i class="fas fa-question-circle"></i> Questions</a></li>
        <li><a href="/admin/users"><i class="fas fa-users"></i> Users</a></li>
        <li><a href="/admin/mentors" class="active"><i class="fas fa-user-tie"></i> Mentors</a></li>
        <li><a href="/admin/bookings"><i class="fas fa-calendar-alt"></i> Bookings</a></li>
        <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
      </ul>
    </nav>

    <!-- Logout link for admin -->
    <div class="admin-logout">
      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
  </div>

  <!-- Main content area for admin actions -->
  <div class="admin-content">

    <!-- Top header: displays page title and logged-in admin name -->
    <header class="admin-header">
      <div class="admin-header-title">
        <h2>Add New Mentor</h2>
      </div>
      <div class="admin-header-user">
        <span>Welcome, <%= user.name %></span>
      </div>
    </header>

    <!-- Central section where form lives -->
    <main class="admin-main">

      <!-- Button to navigate back to mentor listing -->
      <div class="admin-actions mb-4">
        <a href="/admin/mentors" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to Mentors
        </a>
      </div>

      <!-- Display validation error messages, if any -->
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger mb-4">
          <%= error %>
        </div>
      <% } %>

      <!-- Card container for the form -->
      <div class="card">
        <div class="card-body">

          <!-- Form to add a new mentor (POST method to server endpoint) -->
          <form action="/admin/mentors/add" method="POST">

            <!-- Input: Mentor's full name -->
            <div class="form-group mb-3">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <!-- Input: Area of specialty (e.g. career field, subject area) -->
            <div class="form-group mb-3">
              <label for="specialty">Specialty</label>
              <input type="text" class="form-control" id="specialty" name="specialty" placeholder="e.g. Career Counseling, Science Stream Expert" required>
            </div>

            <!-- Input: Mentor's years or type of experience -->
            <div class="form-group mb-3">
              <label for="experience">Experience</label>
              <input type="text" class="form-control" id="experience" name="experience" placeholder="e.g. 5 years" required>
            </div>

            <!-- Input: Short biography or description -->
            <div class="form-group mb-3">
              <label for="bio">Bio</label>
              <textarea class="form-control" id="bio" name="bio" rows="5" required></textarea>
            </div>

            <!-- Input: Session rate in INR -->
            <div class="form-group mb-3">
              <label for="rate">Session Rate (â‚¹)</label>
              <input type="number" class="form-control" id="rate" name="rate" min="0" required>
            </div>

            <!-- Input: Availability days/times -->
            <div class="form-group mb-3">
              <label for="availability">Availability</label>
              <textarea class="form-control" id="availability" name="availability" rows="3" placeholder="e.g. Monday to Friday, 10:00 AM to 6:00 PM" required></textarea>
            </div>

            <!-- Submit button to add mentor to system -->
            <button type="submit" class="btn btn-primary">Add Mentor</button>

          </form>
        </div>
      </div>
    </main>

    <!-- Footer displaying dynamic current year -->
    <footer class="admin-footer">
      <p>&copy; <%= new Date().getFullYear() %> VistaeGuide Admin Panel. All rights reserved.</p>
    </footer>
  </div>

  <!-- JavaScript: Admin script and Bootstrap bundle -->
  <script src="/admin.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
