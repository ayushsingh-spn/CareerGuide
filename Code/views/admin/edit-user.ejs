<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Character encoding and responsive settings -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page title -->
  <title>Edit User - VistaeGuide</title>

  <!-- Link to admin stylesheet -->
  <link rel="stylesheet" href="/admin.css">

  <!-- Font Awesome for icon usage -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="admin-body">

  <!-- Sidebar navigation for admin interface -->
  <div class="admin-sidebar">

    <!-- Logo linking to homepage -->
    <div class="admin-logo">
      <a href="http://localhost:8080/" class="logo" style="text-decoration: none;">
        <img src="/creative.png" alt="" style="height: 60px; width: 60px;">
      </a>
    </div>

    <!-- Admin section links -->
    <nav class="admin-nav">
      <ul>
        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href="/admin/questions"><i class="fas fa-question-circle"></i> Questions</a></li>
        <li><a href="/admin/users" class="active"><i class="fas fa-users"></i> Users</a></li>
        <li><a href="/admin/mentors"><i class="fas fa-user-tie"></i> Mentors</a></li>
        <li><a href="/admin/bookings"><i class="fas fa-calendar-alt"></i> Bookings</a></li>
        <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
      </ul>
    </nav>

    <!-- Logout option -->
    <div class="admin-logout">
      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
  </div>

  <!-- Main content area for editing user -->
  <div class="admin-content">

    <!-- Top header with section title and admin name -->
    <header class="admin-header">
      <div class="admin-header-title">
        <h2>Edit User</h2>
      </div>
      <div class="admin-header-user">
        <span>Welcome, <%= locals.user.name %></span>
      </div>
    </header>

    <!-- Page body for editing user profile -->
    <main class="admin-main">
      <div class="edit-user-container">

        <!-- Section heading with back button -->
        <div class="edit-user-header">
          <h3>Edit User Information</h3>
          <div class="edit-user-actions">
            <a href="/admin/users" class="btn btn-secondary">
              <i class="fas fa-arrow-left"></i> Back to Users
            </a>
          </div>
        </div>

        <!-- Success message block -->
        <% if (locals.success && locals.success.length > 0) { %>
          <div class="alert alert-success">
            <%= locals.success %>
          </div>
        <% } %>

        <!-- Error message block -->
        <% if (locals.error && locals.error.length > 0) { %>
          <div class="alert alert-error">
            <%= locals.error %>
          </div>
        <% } %>

        <!-- Form for editing user data -->
        <div class="edit-user-form-container">
          <form action="/admin/users/<%= user.id %>" method="POST" class="edit-user-form">

            <!-- Name input -->
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" value="<%= user.name %>" required>
            </div>

            <!-- Email input -->
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" value="<%= user.email %>" required>
            </div>

            <!-- Password input (optional) -->
            <div class="form-group">
              <label for="password">Password (leave blank to keep current)</label>
              <input type="password" id="password" name="password" placeholder="Enter new password">
              <small>Only fill this if you want to change the user's password</small>
            </div>

            <!-- Checkbox for email verification status -->
            <div class="form-group checkbox-group">
              <input type="checkbox" id="email_verified" name="email_verified" <%= user.email_verified ? 'checked' : '' %>>
              <label for="email_verified">Email Verified</label>
            </div>

            <!-- Submit and cancel buttons -->
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Save Changes</button>
              <a href="/admin/users" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </main>

    <!-- Page footer with dynamic year -->
    <footer class="admin-footer">
      <p>&copy; <%= new Date().getFullYear() %> VistaeGuide Admin Panel. All rights reserved.</p>
    </footer>
  </div>

  <!-- Admin JavaScript functionality -->
  <script src="/admin.js"></script>
</body>
</html>
