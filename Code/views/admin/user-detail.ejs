<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Details - CareerGuide</title>
  <link rel="stylesheet" href="/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="admin-body">
  <div class="admin-sidebar">
    <div class="admin-logo">
        <a href="http://localhost:8080/" class="logo" style="text-decoration: none;"><img src="/creative.png" alt="" style="height: 60px; width: 60px;"></a>
    </div>
    <nav class="admin-nav">
      <ul>
        <li><a href="/dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href="/admin/questions"><i class="fas fa-question-circle"></i> Questions</a></li>
        <li><a href="/admin/users"><i class="fas fa-users"></i> Users</a></li>
        <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
      </ul>
    </nav>
    <div class="admin-logout">
      <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
  </div>
  
  <div class="admin-content">
    <header class="admin-header">
      <div class="admin-header-title">
        <h2>User Details</h2>
      </div>
      <div class="admin-header-user">
        <span>Welcome, <%= locals.user.name %></span>
      </div>
    </header>
    
    <main class="admin-main">
      <div class="user-detail-container">
        <div class="user-detail-header">
          <h3>User Information</h3>
          <div class="user-detail-actions">
            <a href="/admin/users" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Users</a>
            <a href="/admin/users/<%= user.id %>/edit" class="btn btn-primary"><i class="fas fa-edit"></i> Edit User</a>
          </div>
        </div>
        
        <div class="user-detail-card">
          <div class="user-info">
            <div class="user-info-item">
              <span class="label">Name:</span>
              <span class="value"><%= user.name %></span>
            </div>
            <div class="user-info-item">
              <span class="label">Email:</span>
              <span class="value"><%= user.email %></span>
            </div>
            <div class="user-info-item">
              <span class="label">Joined:</span>
              <span class="value">
                <% 
                  const date = new Date(user.created_at);
                  const formattedDate = date.toLocaleString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  });
                %>
                <%= formattedDate %>
              </span>
            </div>
            <div class="user-info-item">
              <span class="label">Email Verified:</span>
              <span class="value">
                <% if (user.email_verified) { %>
                  <span class="verified"><i class="fas fa-check-circle"></i> Verified</span>
                <% } else { %>
                  <span class="not-verified"><i class="fas fa-times-circle"></i> Not Verified</span>
                <% } %>
              </span>
            </div>
          </div>
        </div>
        
        <div class="user-questions-section">
          <h3>User Questions</h3>
          
          <% if (questions && questions.length > 0) { %>
            <div class="question-list">
              <% questions.forEach(question => { %>
                <div class="question-item">
                  <div class="question-header">
                    <span class="question-date">
                      <% 
                        const qDate = new Date(question.created_at);
                        const qFormattedDate = qDate.toLocaleString('en-US', { 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric',
                          hour: '2-digit',
                          minute: '2-digit'
                        });
                      %>
                      <%= qFormattedDate %>
                    </span>
                  </div>
                  <div class="question-content">
                    <p class="question-text"><%= question.question %></p>
                    
                    <% if (question.answers && question.answers.trim() !== '') { %>
                      <div class="question-answer">
                        <h4>Answer:</h4>
                        <p><%= question.answers %></p>
                      </div>
                    <% } else { %>
                      <div class="question-no-answer">
                        <p><i class="fas fa-exclamation-circle"></i> No answer provided yet</p>
                      </div>
                    <% } %>
                  </div>
                  <div class="question-actions">
                    <a href="/admin/<%= question.id %>/edit" class="btn btn-small">
                      <i class="fas fa-edit"></i> <%= question.answers ? 'Edit Answer' : 'Answer' %>
                    </a>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="no-questions">
              <p>This user hasn't asked any questions yet.</p>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    
    <footer class="admin-footer">
      <p>&copy; <%= new Date().getFullYear() %> CareerGuide Admin Panel. All rights reserved.</p>
    </footer>
  </div>

  <script src="/admin.js"></script>
</body>
</html>
